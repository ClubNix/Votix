{% extends 'base.html.twig' %}

{% block meta %}
    <meta http-equiv="cache-control" content="max-age=0" />
    <meta http-equiv="cache-control" content="no-cache" />
    <meta http-equiv="expires" content="0" />
    <meta http-equiv="expires" content="Tue, 01 Jan 1980 1:00:00 GMT" />
    <meta http-equiv="pragma" content="no-cache" />
{% endblock %}

{% block body %}
    <div>
        <h4>Vote</h4>
        Bonjour {{ voter.firstname }}, tu peux à présent voter.<br />

        Attention : Tu ne peux voter qu'une seule fois ! Choisis bien.<br /><br />

        <form action="" method="post">
            <input type="hidden" name="token" value="{{ token }}">
            <div>
                <label for="choice">Liste</label>
                <div>
                {% for candidate in candidates %}
                    <div class="radio">
                        <label><input type="radio"
                                      {% if not candidate.eligible %} class="disabled" disabled {% endif %}
                                      name="choice" value="{{ candidate.id }}">{{ candidate.name }}</label>
                    </div>
                {% endfor %}
                </div>
            </div>
            <div>
                <label for="security">Code de sécurité à 4 chiffres (dans le mail) :</label>
                <input type="number" id="security" name="security" value="" placeholder="NNNN">
            </div>
            <button type="submit" class="button alert">Valider mon choix (irréversible)</button>
        </form>
    </div>
{% endblock %}
