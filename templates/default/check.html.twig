{% extends 'base.html.twig' %}

{% block body %}

    <h2>Procédure de vérification de la clef</h2>

    <form method="post" action="{{ path('check_process') }}">
        <div>
            <label for="">Clef Votix</label>
            <textarea name="key" placeholder="Collez ici la clef votix"></textarea>
        </div>
        <input type="submit" class="button" value="Tester la clef">
    </form>

    {% if message is defined and message is not empty %}
        <p>{{ message }}</p>
    {% endif %}

{% endblock %}
